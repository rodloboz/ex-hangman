<p>
  <strong>Turns left:</strong>
  <%= @tally.turns_left %>
</p>
<p>
  <strong>Word so far:</strong>
  <%= @tally.letters |> Enum.join(" ") %>
</p>

<%= if game_over?(@tally) do %>
  <%= new_game_button(@conn) %>
<% else %>
  <%= form_for @conn,
              Routes.hangman_path(@conn, :update),
              [ as: :make_move, method: :put ],
              fn f -> %>
    <%= text_input(f, :guess) %>
    <%= submit("Make next move") %>
  <% end %>
<% end %>